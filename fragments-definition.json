{
  "family": "fragments-task",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::730335247843:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fragment-container",
      "image": "730335247843.dkr.ecr.us-east-1.amazonaws.com/fragments:TAG_HERE",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "PORT", "value": "80" },
        { "name": "AWS_COGNITO_CLIENT_ID", "value": "YOUR_SECRET_HERE" },
        { "name": "AWS_COGNITO_POOL_ID", "value": "YOUR_SECRET_HERE" },
        { "name": "LOG_LEVEL", "value": "debug" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "API_URL", "value": "YOUR_API_URL_HERE" },
        { "name": "AWS_REGION", "value": "us-east-1" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fragments-task",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
